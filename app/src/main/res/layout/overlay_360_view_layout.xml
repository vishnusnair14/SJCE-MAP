<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay360ViewLayout_linerarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#918F8F"
        android:fontFamily="@font/aldrich"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="5dp"
        android:text="@string/_360_view"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/baseline_360_24" />

    <WebView
        android:id="@+id/gmap360View_webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3ECEC"
        android:backgroundTint="#CFCCCC"
        android:paddingTop="10dp">

    </WebView>

    <Button
        android:id="@+id/overlayBack_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/anonymous_pro"
        android:text="@string/back"
        android:textStyle="bold"
        app:cornerRadius="18dp" />

</LinearLayout>
